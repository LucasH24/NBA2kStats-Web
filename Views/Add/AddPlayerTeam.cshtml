@model AddPlayerTeamViewModel

<h2 class="mt-3"> Add Player</h2>

<form asp-action="CreatePlayerTeam" method="post">
    <div asp-validation-summary="All">     
    </div>

        <div class="form-group col">
            <label asp-for="@Model.PlayerID">Player</label>
            <input asp-for="@Model.PlayerID" autoComplete="on" list="players" placeholder=""/>
            <datalist id="players">
                @foreach (Player player in Model.Players) {
                    <option value="@player.PlayerID"> @player.PlayerFullName</option>
                }
            </datalist>
        </div>

        <div class="form-group col" hidden>
            <label asp-for="@Model.TeamID">Team</label>
            <input asp-for="@Model.TeamID" value="@Model.team.TeamID" class="form-control" placeholder=""/>
        </div>

        <div class="form-group col-sm-1">
            <label asp-for="@Model.Overall">Overall</label>
            <input asp-for="@Model.Overall" class="form-control" placeholder="" />
        </div>

        <button type="submit" class="btn btn-outline-primary">Add Player</button>
</form>
