@model AddingViewModel

<h2 class="mt-3"> Add Season Game</h2>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1ID">Team 1</label>
            <input asp-for="@Model.Team1ID" autoComplete="on" list="teams" class="form-control" placeholder="" />
            <datalist id="teams">
                @foreach (Team team in Model.Teams)
                {
                    <option value="@team.TeamID"> @team.FullName</option>
                }
            </datalist>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2ID">Team 2</label>
            <input asp-for="@Model.Team2ID" autoComplete="on" list="teams2" class="form-control"
                placeholder="" />
            <datalist id="teams2">
                @foreach (Team team in Model.Teams)
                {
                    <option value="@team.TeamID"> @team.FullName</option>
                }
            </datalist>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.SeasonGame.Team1Score">Team 1 Score</label>
            <input asp-for="@Model.SeasonGame.Team1Score" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.SeasonGame.Team2Score">Team 2 Score</label>
            <input asp-for="@Model.SeasonGame.Team2Score" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.SeasonGame.GameNumber">Game Number</label>
            <input asp-for="@Model.SeasonGame.GameNumber" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.SeasonGame.SeasonID">Season</label>
            <input asp-for="@Model.SeasonGame.SeasonID" class="form-control" placeholder="" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Series</button>

</form>
