@model AddingViewModel


<h2 class="mt-3"> Add Player Stats</h2>


<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-row">
        <div class="form-group col-sm-1" hidden>
            <label asp-for="@Model.SeasonBox.SeasonID">Season</label>
            <input asp-for="@Model.SeasonBox.SeasonID" class="form-control" placeholder="" value="@Model.SeasonGame.SeasonID"/>
        </div>

        <div class="form-group col-sm-1" hidden>
            <label asp-for="@Model.SeasonBox.SeasonGameID">Game</label>
            <input asp-for="@Model.SeasonBox.SeasonGameID" class="form-control" placeholder="" value="@Model.SeasonGame.SeasonGameID"/>
        </div>

        <div class="form-group col-sm-1">
            <label asp-for="@Model.SeasonBox.Team">Team</label>
            <input asp-for="@Model.SeasonBox.Team" class="form-control" placeholder="" />
        </div>

    </div>

    <div class="form-row">
        <div class="form-group col-sm-1">
            <label asp-for="@Model.SeasonBox.POS">POS</label>
            <input asp-for="@Model.SeasonBox.POS" class="form-control" placeholder="" />
        </div>

        <div class="form-group col-sm-2">
            <label asp-for="@Model.PlayerID">Player</label>
            <input asp-for="@Model.PlayerID" autoComplete="on" list="teams" class="form-control" placeholder="" />
            <datalist id="teams">
                @foreach (PlayerTeam playerTeam in Model.PlayerTeams.Where(p => p.TeamID == Model.SeasonGame.Team1ID || p.TeamID == Model.SeasonGame.Team2ID))
                {
                    <option value="@playerTeam.PlayerID"> @playerTeam.Player.PlayerShortName</option>
                }
            </datalist>
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.MIN" class="fw-bold">MIN</label>
            <input asp-for="@Model.SeasonBox.MIN" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.PTS">PTS</label>
            <input asp-for="@Model.SeasonBox.PTS" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.REB">REB</label>
            <input asp-for="@Model.SeasonBox.REB" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.AST">AST</label>
            <input asp-for="@Model.SeasonBox.AST" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.STLS">STLS</label>
            <input asp-for="@Model.SeasonBox.STLS" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.BLK">BLK</label>
            <input asp-for="@Model.SeasonBox.BLK" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.TOR">TOR</label>
            <input asp-for="@Model.SeasonBox.TOR" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.FGM">FGM</label>
            <input asp-for="@Model.SeasonBox.FGM" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.FGA">FGA</label>
            <input asp-for="@Model.SeasonBox.FGA" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.TPM">TPM</label>
            <input asp-for="@Model.SeasonBox.TPM" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.SeasonBox.TPA">TPA</label>
            <input asp-for="@Model.SeasonBox.TPA" class="form-control" placeholder="" />
        </div>

        <button type="submit" class="btn btn-outline-primary">ADD PLAYER</button>

    </div>
</form>
