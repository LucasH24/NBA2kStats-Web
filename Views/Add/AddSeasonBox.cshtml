@model SeasonBox

<h2 class="mt-3"> Add Player Stats</h2>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-row">
        <div class="form-group col-sm-1">
            <label asp-for="@Model.SeasonID">Season</label>
            <input asp-for="@Model.SeasonID" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-sm-1">
            <label asp-for="@Model.Team">Team</label>
            <input asp-for="@Model.Team" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-2">
            <label asp-for="@Model.PlayerName">Player Name</label>
            <input asp-for="@Model.PlayerName" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-sm-1">
            <label asp-for="@Model.POS">POS</label>
            <input asp-for="@Model.POS" class="form-control" placeholder="" />
        </div>
    </div>


    <div class="form-row">
        <div class="form-group col">
            <label asp-for="@Model.MIN" class="fw-bold">MIN</label>
            <input asp-for="@Model.MIN" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.PTS">PTS</label>
            <input asp-for="@Model.PTS" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.REB">REB</label>
            <input asp-for="@Model.REB" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.AST">AST</label>
            <input asp-for="@Model.AST" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.STLS">STLS</label>
            <input asp-for="@Model.STLS" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.BLK">BLK</label>
            <input asp-for="@Model.BLK" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.TOR">TOR</label>
            <input asp-for="@Model.TOR" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.FGM">FGM</label>
            <input asp-for="@Model.FGM" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.FGA">FGA</label>
            <input asp-for="@Model.FGA" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.TPM">TPM</label>
            <input asp-for="@Model.TPM" class="form-control" placeholder="" />
        </div>
        <div class="form-group col">
            <label asp-for="@Model.TPA">TPA</label>
            <input asp-for="@Model.TPA" class="form-control" placeholder="" />
        </div>

        <button type="submit" class="btn btn-outline-primary">ADD PLAYER</button>

    </div>
</form>
