@model Season

<h2 class="mt-3"> Add Season</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1">Team 1</label>
            <input asp-for="@Model.Team1" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2">Team 2</label>
            <input asp-for="@Model.Team2" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1W">Team 1 Wins</label>
            <input asp-for="@Model.Team1W" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2W">Team 2 Wins</label>
            <input asp-for="@Model.Team2W" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1Color">Team 1 Color</label>
            <input asp-for="@Model.Team1Color" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2Color">Team 2 Color</label>
            <input asp-for="@Model.Team2Color" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.PlayedGames">Played Games</label>
            <input asp-for="@Model.PlayedGames" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Minutes">Game Length</label>
            <input asp-for="@Model.Minutes" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.NBA2k">NBA2k Version</label>
            <input asp-for="@Model.NBA2k" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.IsAppropriate">Is Appropriate</label>
            <input asp-for="@Model.IsAppropriate" placeholder="" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Season</button>

</form>
