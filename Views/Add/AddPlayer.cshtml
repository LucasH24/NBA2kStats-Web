@model AddPlayerViewModel

<h2 class="mt-3"> Add Player</h2>

<label>Player List</label>
<input autoComplete="on" list="players" placeholder="" />
<datalist id="players">
    @foreach (Player player in Model.Players)
    {
        <option value="@player.PlayerID"> @player.PlayerFullName</option>
    }
</datalist>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Player.PlayerFullName">Full Name</label>
            <input asp-for="@Model.Player.PlayerFullName" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Player.PlayerShortName">Short Name</label>
            <input asp-for="@Model.Player.PlayerShortName" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Player.IsAppropriate">Is Appropriate</label>
            <input asp-for="@Model.Player.IsAppropriate" placeholder="" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Player</button>

</form>
