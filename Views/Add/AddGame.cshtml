@model Game

<h2 class="mt-3"> Add Game</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.GameNumber">Game Number</label>
            <input asp-for="@Model.GameNumber" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1Score">Team 1 Score</label>
            <input asp-for="@Model.Team1Score" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2Score">Team 2 Score</label>
            <input asp-for="@Model.Team2Score" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1ORB">Team 1 ORB</label>
            <input asp-for="@Model.Team1ORB" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2ORB">Team 2 ORB</label>
            <input asp-for="@Model.Team2ORB" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1FTA">Team 1 FTA</label>
            <input asp-for="@Model.Team1FTA" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2FTA">Team 2 FTA</label>
            <input asp-for="@Model.Team2FTA" class="form-control" placeholder="" />
        </div>
    </div>
    
    <button type="submit" class="btn btn-outline-primary">Add Game</button>

</form>

