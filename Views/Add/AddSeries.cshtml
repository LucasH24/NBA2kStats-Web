@model AddingViewModel

<h2 class="mt-3"> Add Series</h2>

<form method="post">
    <div asp-validation-summary="All"></div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Team1ID">Team 1</label>
            <input asp-for="@Model.Team1ID" autoComplete="on" list="teams" class="form-control" placeholder="" />
            <datalist id="teams">
                @foreach (Team team in Model.Teams)
                {
                    <option value="@team.TeamID"> @team.FullName</option>
                }
            </datalist>
        </div>

        <div class="form-group col-md-3">
            <label asp-for="@Model.Team2ID">Team 2</label>
            <input asp-for="@Model.Team2ID" autoComplete="on" list="teams2" class="form-control"
                placeholder="" />
            <datalist id="teams2">
                @foreach (Team team in Model.Teams)
                {
                    <option value="@team.TeamID"> @team.FullName</option>
                }
            </datalist>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.Team1W">Team 1 Wins</label>
            <input asp-for="@Model.Series.Team1W" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.Team2W">Team 2 Wins</label>
            <input asp-for="@Model.Series.Team2W" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.PlayedGames">Played Games</label>
            <input asp-for="@Model.Series.PlayedGames" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.Minutes">Game Length</label>
            <input asp-for="@Model.Series.Minutes" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.NBA2k">NBA2k Version</label>
            <input asp-for="@Model.Series.NBA2k" class="form-control" placeholder="" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Series.IsAppropriate">Is Appropriate</label>
            <input asp-for="@Model.Series.IsAppropriate" placeholder="" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Series</button>

</form>
