@model Team

<h2 class="mt-3"> Add Team</h2>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.Year">Year (2022-23)</label>
            <input asp-for="@Model.Year" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.City">City</label>
            <input asp-for="@Model.City" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.TeamName">Team Name</label>
            <input asp-for="@Model.TeamName" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.FullName">Long (22-23 Boston Celtics)</label>
            <input asp-for="@Model.FullName" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.ShortName">Short (22-23 Celtics)</label>
            <input asp-for="@Model.ShortName" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.TeamColor1">Main Color</label>
            <input asp-for="@Model.TeamColor1" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.TeamColor2">Alt Color</label>
            <input asp-for="@Model.TeamColor2" class="form-control" placeholder="" />
        </div>
        <div class="form-group col-md-3">
            <label asp-for="@Model.PrimaryColor">Primary Color</label>
            <input asp-for="@Model.PrimaryColor" class="form-control" placeholder="" />
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-3">
            <label asp-for="@Model.IsAppropriate">Is Appropriate</label>
            <input asp-for="@Model.IsAppropriate" placeholder="" />
        </div>
    </div>

    <button type="submit" class="btn btn-outline-primary">Add Team</button>

</form>
