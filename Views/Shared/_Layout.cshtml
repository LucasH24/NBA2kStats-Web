<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/cite.css" />
    <!-- bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css"
        integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
    <!-- font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
        integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- google font -->
    <link href="https://fonts.googleapis.com/css?family=Fjalla+One" rel="stylesheet">
</head>

<div id="bootstrap-overrides">

    <body id="body">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow d-flex flex-row justify-content-between text-white w-80"
            style="background: black;">
                <div class="hideWhenLarge">
                    <span class="dropdown">
                        <a class="navbar-brand " type="button" data-toggle="dropdown" aria-expanded="false"> <i
                                class="fas fa-bars"></i> </a>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="ViewSeries">
                                View Series</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Season" asp-action="ViewSeasons">
                                View Seasons</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Data" asp-action="StatView"> Stat
                                Viewer</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Roster" asp-action="ViewTeams">
                                View Teams</a>
                            <a class="dropdown-item" asp-area="" asp-controller="Roster" asp-action="ViewPlayers">
                                View Players</a>
                        </div>
                    </span>
                    <span>
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                            <img style="width: 200px; height: auto;" src="/Images/logo.png" alt="NBA2KSTATS Logo">
                        </a>
                    </span>
                </div>

                <div class="hideWhenSmall" style="padding-left: 10vw;">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img style="width: 200px; height: auto;" src="/Images/logo.png" alt="NBA2KSTATS Logo">
                    </a>
                </div>

                <div class="dropdown hideWhenSmall">
                    <a class="navbar-brand dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        Game Stats </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="Series" asp-action="ViewSeries"> View
                            Series</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Season" asp-action="ViewSeasons"> View
                            Seasons</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Data" asp-action="StatView"> Stat
                            Viewer</a>
                    </div>
                </div>

                <div class="dropdown hideWhenSmall">
                    <a class="navbar-brand dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                        Rosters </a>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" asp-area="" asp-controller="Roster" asp-action="ViewTeams"> View
                            Teams</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Roster" asp-action="ViewPlayers"> View
                            Players</a>
                    </div>
                </div>

                @{
                    if (User.IsInRole("admin"))
                    {
                        <div class="hideWhenSmall">
                            <a class="navbar-brand" asp-area="" asp-controller="Add" asp-action="AddHub"> Add</a>
                            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>
                    }
                }

                <div style="padding-right: 10vw;">
                    <partial name="_LoginPartial" />
                </div>

            
        </nav>

        <div id="content" class="container">

            <main role="main">
                <div class="custom-padding" style="min-height: 94vh; color:white;">
                    @RenderBody()
                </div>
            </main>
        </div>

        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct"
            crossorigin="anonymous"></script>

        <script>
            function toggleDropdown() {
                document.getElementById("myDropdown").classList.toggle("show");
            }

            // Close the dropdown if the user clicks outside of it
            window.onclick = function (e) {
                try {
                    if (!e.target.matches('.dropbtn')) {
                        var myDropdown = document.getElementById("myDropdown");
                        if (myDropdown.classList.contains('show')) {
                            myDropdown.classList.remove('show');
                        }
                    }
                }
                catch (err) {

                }
            }
        </script>

        @await RenderSectionAsync("Scripts", required: false)

    </body>
</div>

</html>